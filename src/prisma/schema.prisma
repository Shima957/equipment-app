generator client {
  provider = "prisma-client-js"
}

datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model User {
  id          String  @id @db.Uuid
  userId      String  @unique
  displayName String?
  avatorUrl   String?
  email       String  @unique
  post        Post[]
}

model Post {
  id       Int    @id @default(autoincrement())
  authorId String @unique @db.Uuid
  User     User   @relation(fields: [authorId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  daw      Json[]
}

model Daw {
  id       Int     @id @default(autoincrement())
  category String
  name     String
  maker    String
  webUrl   String?
  imgUrl   String?
}

model Speacker {
  id       Int     @id @default(autoincrement())
  category String
  name     String
  maker    String
  webUrl   String?
  imgUrl   String?
}
