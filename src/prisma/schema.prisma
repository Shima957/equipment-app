generator client {
  provider = "prisma-client-js"
}

datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model User {
  id           String  @id @unique @db.Uuid
  userId       String  @unique
  displayName  String?
  avatarUrl    String?
  email        String  @unique
  twitterId    String?
  soundCloudId String?
  post         Post[]
}

model Post {
  id       Int     @id @default(autoincrement())
  authorId String
  User     User    @relation(fields: [authorId], references: [userId], onDelete: SetNull, onUpdate: Cascade)
  Gears    Gears[] @relation(fields: [gearsId], references: [id])
  gearsId  Int?
}

model Gears {
  id       Int     @id @default(autoincrement())
  category String
  name     String
  maker    String
  webUrl   String?
  imgUrl   String?
  post     Post[]
}
