generator client {
  provider = "prisma-client-js"
}

datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model User {
  id          String  @id @db.Uuid
  userId      String  @unique
  displayName String?
  avatorUrl   String?
  email       String  @unique
  Post        Post[]
}

model Post {
  id       Int    @id @default(autoincrement())
  author   User   @relation(fields: [authorId], references: [id])
  authorId String
}

model DAW {
  id       Int     @id @default(autoincrement())
  category String
  name     String
  maker    String
  webUrl   String?
  imgUrl   String?
}

model Speacker {
  id       Int     @id @default(autoincrement())
  category String
  name     String
  maker    String
  webUrl   String?
  imgUrl   String?
}
